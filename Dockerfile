FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /harbor ./cmd/harbor

FROM alpine:3.20

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

COPY --from=builder /harbor /app/harbor

RUN mkdir -p /data/artifacts

EXPOSE 8080

ENTRYPOINT ["/app/harbor"]
